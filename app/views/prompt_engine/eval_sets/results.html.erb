<script>
// Auto-refresh for running evaluations
document.addEventListener('DOMContentLoaded', function() {
  const runningCards = document.querySelectorAll('.run-card .status-running');

  if (runningCards.length > 0) {
    // Refresh every 5 seconds if there are running evaluations
    setTimeout(function() {
      location.reload();
    }, 5000);
  }
});
</script>