<div class="main-header">
  <nav class="breadcrumb">
    <%= link_to "Prompts", "/prompt_engine/prompts", class: "breadcrumb-link" %>
    <span class="breadcrumb-separator">â€º</span>
    <%= link_to @prompt.name, "/prompt_engine/prompts/#{@prompt.id}", class: "breadcrumb-link" %>
    <span class="breadcrumb-separator">â€º</span>
    <%= link_to "Evaluation Sets", "/prompt_engine/prompts/#{@prompt.id}/eval_sets", class: "breadcrumb-link" %>
    <span class="breadcrumb-separator">â€º</span>
    <%= link_to @eval_set.name, "/prompt_engine/prompts/#{@prompt.id}/eval_sets/#{@eval_set.id}", class: "breadcrumb-link" %>
    <span class="breadcrumb-separator">â€º</span>
    <span class="breadcrumb-current">Results</span>
  </nav>

  <div class="header-content">
    <h1>Evaluation Results: <%= @eval_set.name %></h1>
    <p class="text-muted">Compare AI outputs with ground truth data</p>
  </div>
</div>

<div class="container">
  <!-- Running Evaluation Banner -->
  <% if @running_runs&.any? %>
    <div class="running-banner">
      <div class="running-banner-content">
        <div class="spinner"></div>
        <div class="running-info">
          <h3>Evaluation in Progress</h3>
          <p>
            <% @running_runs.each do |run| %>
              <strong>Run #<%= run.id %></strong> is currently processing <%= run.total_count %> patent(s)...
              <% if run.metadata && run.metadata['progress'] %>
                (<%= run.metadata['progress'].round(1) %>% complete)
              <% end %>
            <% end %>
          </p>
          <div style="display: flex; gap: 10px;">
            <button onclick="location.reload()" class="refresh-btn-banner">â†» Refresh Page</button>
            <%= button_to "ðŸ›‘ EMERGENCY STOP",
                stop_prompt_eval_set_path(@prompt, @eval_set),
                method: :post,
                data: { confirm: 'Are you sure you want to stop all running evaluations? This will prevent further OpenAI API calls.' },
                class: "btn-danger",
                style: "background-color: #dc3545; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer; font-weight: bold;" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Run Selection -->
  <div class="card mb-4">
    <div class="card-header">
      <h2>Select Evaluation Run</h2>
    </div>
    <div class="card-body">
      <% if @eval_runs.any? %>
        <%= form_with url: request.path, method: :get, local: true, class: "run-selection-form" do |form| %>
          <%= form.hidden_field :mode, value: "results" %>
          <div class="form-group">
            <label for="run_id" class="form-label">Choose Run to Analyze:</label>
            <%= form.select :run_id, options_from_collection_for_select(@eval_runs, :id, :display_name, params[:run_id]),
                           { prompt: "Select evaluation run..." },
                           { class: "form-control", onchange: "this.form.submit();" } %>
          </div>
        <% end %>

        <div class="runs-grid">
          <% @eval_runs.each do |run| %>
            <div class="run-card <%= 'selected' if @selected_run&.id == run.id %>">
              <div class="run-header">
                <strong>Run #<%= run.id %></strong>
                <span class="run-status status-<%= run.status %>"><%= run.status.humanize %></span>
              </div>
              <div class="run-details">
                <div class="run-stat">
                  <span class="stat-label">Success Rate:</span>
                  <span class="stat-value">
                    <%= run.total_count > 0 ? "#{((run.passed_count.to_f / run.total_count) * 100).round(1)}%" : "0%" %>
                  </span>
                </div>
                <div class="run-stat">
                  <span class="stat-label">Tests:</span>
                  <span class="stat-value"><%= run.passed_count %>/<%= run.total_count %></span>
                </div>
                <div class="run-stat">
                  <span class="stat-label">Created:</span>
                  <span class="stat-value"><%= run.created_at.strftime("%m/%d %H:%M") %></span>
                </div>
              </div>

              <!-- Progress Bar -->
              <% if run.status == 'running' %>
                <div class="progress-container">
                  <%
                    # Safely get metadata as Hash
                    metadata = begin
                      run.metadata.is_a?(Hash) ? run.metadata : (JSON.parse(run.metadata.to_s) rescue {})
                    rescue
                      {}
                    end
                    progress = metadata['progress'] || metadata[:progress] || 0
                  %>
                  <div class="progress">
                    <div class="progress-bar" style="width: <%= progress %>%"></div>
                  </div>
                  <div class="progress-text">
                    <%= progress.round(1) %>% - Processing <%= metadata['processed'] || metadata[:processed] || 0 %> of <%= metadata['total'] || metadata[:total] || 0 %>
                    <button onclick="location.reload()" class="refresh-btn">â†»</button>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <p>No completed evaluation runs found.</p>
          <%= link_to "Run New Evaluation", "/prompt_engine/prompts/#{@prompt.id}/eval_sets/#{@eval_set.id}?mode=run_form", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Detailed Results -->
  <% if @selected_run && @detailed_comparison %>
    <div class="card">
      <div class="card-header">
        <h2>Detailed Comparison - Run #<%= @selected_run.id %></h2>
        <div class="comparison-summary">
          <div class="summary-stat">
            <span class="stat-number"><%= @detailed_comparison.count { |c| c[:passed] } %></span>
            <span class="stat-label">Passed</span>
          </div>
          <div class="summary-stat">
            <span class="stat-number"><%= @detailed_comparison.count { |c| !c[:passed] } %></span>
            <span class="stat-label">Failed</span>
          </div>
          <div class="summary-stat">
            <span class="stat-number"><%= @detailed_comparison.count { |c| c[:differences].any? } %></span>
            <span class="stat-label">With Differences</span>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="comparison-table">
            <thead>
              <tr>
                <th rowspan="2">Patent ID</th>
                <th rowspan="2">Claim</th>
                <th rowspan="2">Status</th>
                <th colspan="3">Ground Truth vs LLM Output Comparison</th>
                <th rowspan="2">Summary</th>
              </tr>
              <tr>
                <th>Subject Matter<br><small class="text-muted">Ground Truth | LLM Output</small></th>
                <th>Inventive Concept<br><small class="text-muted">Ground Truth | LLM Output</small></th>
                <th>Overall Eligibility<br><small class="text-muted">Ground Truth | LLM Output</small></th>
              </tr>
            </thead>
            <tbody>
              <% @detailed_comparison.each do |comparison| %>
                <tr class="<%= comparison[:passed] ? 'row-success' : 'row-failure' %>">
                  <td class="patent-id"><%= comparison[:patent_id] %></td>
                  <td class="claim-number"><%= comparison[:claim_number] %></td>
                  <td class="status">
                    <span class="status-badge <%= comparison[:passed] ? 'status-pass' : 'status-fail' %>">
                      <%= comparison[:passed] ? 'âœ“ Pass' : 'âœ— Fail' %>
                    </span>
                  </td>
                  <td class="field-comparison">
                    <div class="comparison-cell">
                      <div class="ground-truth">
                        <span class="value-label">Ground Truth:</span>
                        <span class="value-content ground-truth-value"><%= comparison[:expected][:subject_matter] || comparison[:expected]['subject_matter'] || 'N/A' %></span>
                      </div>
                      <div class="divider">|</div>
                      <div class="llm-output">
                        <span class="value-label">LLM Output:</span>
                        <span class="value-content llm-value <%= (comparison[:actual]['subject_matter'] || comparison[:actual][:subject_matter]) == (comparison[:expected][:subject_matter] || comparison[:expected]['subject_matter']) ? 'match' : 'mismatch' %>"><%= comparison[:actual]['subject_matter'] || comparison[:actual][:subject_matter] || 'N/A' %></span>
                      </div>
                    </div>
                  </td>
                  <td class="field-comparison">
                    <div class="comparison-cell">
                      <div class="ground-truth">
                        <span class="value-label">Ground Truth:</span>
                        <span class="value-content ground-truth-value"><%= comparison[:expected][:inventive_concept] || comparison[:expected]['inventive_concept'] || 'N/A' %></span>
                      </div>
                      <div class="divider">|</div>
                      <div class="llm-output">
                        <span class="value-label">LLM Output:</span>
                        <span class="value-content llm-value <%= (comparison[:actual]['inventive_concept'] || comparison[:actual][:inventive_concept]) == (comparison[:expected][:inventive_concept] || comparison[:expected]['inventive_concept']) ? 'match' : 'mismatch' %>"><%= comparison[:actual]['inventive_concept'] || comparison[:actual][:inventive_concept] || 'N/A' %></span>
                      </div>
                    </div>
                  </td>
                  <td class="field-comparison">
                    <div class="comparison-cell">
                      <div class="ground-truth">
                        <span class="value-label">Ground Truth:</span>
                        <span class="value-content ground-truth-value"><%= comparison[:expected][:overall_eligibility] || comparison[:expected]['overall_eligibility'] || 'N/A' %></span>
                      </div>
                      <div class="divider">|</div>
                      <div class="llm-output">
                        <span class="value-label">LLM Output:</span>
                        <span class="value-content llm-value <%= (comparison[:actual]['overall_eligibility'] || comparison[:actual][:overall_eligibility]) == (comparison[:expected][:overall_eligibility] || comparison[:expected]['overall_eligibility']) ? 'match' : 'mismatch' %>"><%= comparison[:actual]['overall_eligibility'] || comparison[:actual][:overall_eligibility] || 'N/A' %></span>
                      </div>
                    </div>
                  </td>
                  <td class="differences">
                    <% if comparison[:differences].any? %>
                      <ul class="diff-list">
                        <% comparison[:differences].each do |diff| %>
                          <li class="diff-item">
                            <strong><%= diff[:field] %>:</strong>
                            <span class="diff-values">
                              '<%= diff[:actual] %>' â‰  '<%= diff[:expected] %>'
                            </span>
                          </li>
                        <% end %>
                      </ul>
                    <% else %>
                      <span class="no-differences">No differences</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>

