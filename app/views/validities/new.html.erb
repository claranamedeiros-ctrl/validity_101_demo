<!-- Header -->
<div class="bg-white shadow-sm">
  <div class="px-6 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900">Patent Validity Analysis</h1>
      <p class="mt-2 text-gray-600">Analyze patent claims for validity using AI and the Alice Test methodology</p>
    </div>
  </div>
</div>

<!-- Form -->
<div class="max-w-4xl mx-auto mt-8">
  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-6 py-8">
      <%= form_with url: validities_path, method: :post, class: "space-y-6" do %>
        <!-- Patent Number -->
        <div>
          <label for="patent_number" class="block text-sm font-medium text-gray-700 mb-2">
            Patent Number
          </label>
          <%= text_field_tag :patent_number, nil,
              required: true,
              id: "patent_number",
              placeholder: "e.g., US10123456B2",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
        </div>

        <!-- Claim Number -->
        <div>
          <label for="claim_number" class="block text-sm font-medium text-gray-700 mb-2">
            Claim Number
          </label>
          <%= number_field_tag :claim_number, 1,
              required: true,
              min: 1,
              id: "claim_number",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
        </div>

        <!-- Claim Text -->
        <div>
          <label for="claim_text" class="block text-sm font-medium text-gray-700 mb-2">
            Claim Text
          </label>
          <%= text_area_tag :claim_text, nil,
              required: true,
              rows: 8,
              id: "claim_text",
              placeholder: "Enter the full text of the patent claim to be analyzed...",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-y" %>
        </div>

        <!-- Abstract -->
        <div>
          <label for="abstract" class="block text-sm font-medium text-gray-700 mb-2">
            Patent Abstract
          </label>
          <%= text_area_tag :abstract, nil,
              required: true,
              rows: 6,
              id: "abstract",
              placeholder: "Enter the patent abstract to provide context...",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-y" %>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= submit_tag "Run Validity Analysis",
              class: "w-full bg-primary-600 text-white py-4 px-6 rounded-md font-medium hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors cursor-pointer shadow-sm" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if flash[:alert] %>
    <div class="mt-6 bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-red-700"><%= flash[:alert] %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Admin Link -->
  <div class="mt-8 text-center">
    <p class="text-sm text-gray-500">
      Need to manage prompts? Visit the
      <%= link_to "PromptEngine Admin", "/prompt_engine",
          target: "_blank",
          class: "text-primary-600 hover:text-primary-700 font-medium" %>
    </p>
  </div>
</div>